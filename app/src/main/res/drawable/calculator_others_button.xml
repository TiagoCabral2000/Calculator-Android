<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0e1623" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#0e1623"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#101b2d" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#101b2d"/>
        </shape>
    </item>
</selector>