<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#080a0d" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#080a0d"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10161f" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#080a0d"/>
        </shape>
    </item>
</selector>